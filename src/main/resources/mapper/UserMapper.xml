<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unknownclinic.appointment.repository.UserMapper">

    <!-- 診察券番号でユーザー取得（Spring Security認証用） -->
    <select id="findByCardNumber" resultType="com.unknownclinic.appointment.domain.User">
        SELECT *
        FROM users
        WHERE card_number = #{cardNumber}
        LIMIT 1
    </select>

    <!-- IDでユーザー取得（必要に応じて） -->
    <select id="findById" resultType="com.unknownclinic.appointment.domain.User">
        SELECT *
        FROM users
        WHERE id = #{id}
        LIMIT 1
    </select>

    <!-- 新規登録 -->
    <insert id="insert" parameterType="com.unknownclinic.appointment.domain.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (card_number, birthday, name, password)
        VALUES (#{cardNumber}, #{birthday}, #{name}, #{password})
    </insert>

    <!-- 管理用：全ユーザー一覧 -->
    <select id="findAll" resultType="com.unknownclinic.appointment.domain.User">
        SELECT *
        FROM users
        ORDER BY id
    </select>

</mapper>